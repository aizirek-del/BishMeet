
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/b_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#4568E4"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/arrow_back"/>

                <com.google.android.material.appbar.MaterialToolbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:titleTextColor="@color/white"
                    app:title="О мероприятии"
                    android:layout_marginStart="15dp"/>
            </LinearLayout>
        </com.google.android.material.appbar.AppBarLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_margin="16dp"
            android:orientation="horizontal">



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:backgroundTint="@color/white">


                <ImageView
                    android:id="@+id/gr_image_in_evDetailed"
                    android:layout_width="35dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ftt"
                    android:layout_marginTop="9dp"
                    android:layout_marginStart="6dp"
                    >

                </ImageView>
                <TextView
                    android:id="@+id/gr_title_in_evDetailed"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:text="GDG Bishkek"
                    android:textColor="#202124"
                    android:textSize="16dp"

                    >
                </TextView>
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="20dp"
                    android:text="Открытая группа"
                    android:textColor="#5B5B70"
                    android:textSize="14sp">

                </TextView>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:padding="16dp">

            <TextView
                android:id="@+id/title_of_event_detailed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GDG Devfest Bishkek"
                android:textColor="#202124"
                android:textSize="20sp"
                >


            </TextView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:backgroundTint="@color/white">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/time">

                </ImageView>

                <TextView
                    android:id="@+id/time_of_event_detailed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="24 Февраля  |"
                    android:layout_marginStart="50dp"
                    android:textColor="#5B5B70"
                    android:textSize="14sp">

                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="14:00 - 21:00"
                    android:layout_marginStart="150dp"
                    android:textColor="#5B5B70"
                    android:textSize="14sp">

                </TextView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/white">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_location_on_24"
                    >
                </ImageView>
                <TextView
                    android:id="@+id/location_of_event_detailed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="American University of Central Asia (AUCA)
7/6, Аалы Токомбаев, Бишкек"
                    android:layout_marginStart="50dp"
                    android:textColor="#5B5B70"
                    android:textSize="14sp">
                </TextView>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:orientation="vertical"
            android:layout_margin="16dp">
            <ImageView
                android:id="@+id/foto_event_detailed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ftt">

            </ImageView>

            <TextView
                android:id="@+id/description_event_detailed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Но высокое качество позиционных исследований требует от нас анализа поставленных обществом задач. И нет сомнений, что предприниматели в сети интернет лишь добавляют."
                android:textColor="#202124"
                android:textSize="14sp"
                android:layout_margin="16dp"
                >

            </TextView>

            <Button


                   android:id="@+id/join_to_event"
                    android:layout_width="215dp"
                    android:layout_height="55dp"
                    android:layout_margin="16dp"
                android:backgroundTint="@color/light_gray"
                    android:text="присоединиться"
                    app:icon="@drawable/ic_baseline_check_circle_outline_24"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                     android:textColor="@color/black"
                    />




        </LinearLayout>


    </LinearLayout>
</ScrollView>